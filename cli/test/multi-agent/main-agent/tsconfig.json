{
  "compilerOptions": {
    "lib": ["es2023"],
    "module": "nodenext",
    "target": "es2022",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "nodenext",
    "outDir": "./dist",
    "rootDirs": ["./", "../shared"],
    "declaration": true
  },
  "include": ["**/*", "../shared/*"],
  "exclude": ["node_modules", "dist"]
}